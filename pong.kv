#:kivy 1.0.9

<PongBall>:
    size: 150, 150
    canvas:
        Color:
            rgba: 1, 1, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 100, 400
    canvas:
        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Color:
            rgba: 0, 1, 0, 0.5
        Rectangle:
            pos: self.center_x - 5, 0
            size: 50, self.height

    Label:
        font_size: 80
        center_x: root.width / 4
        top: root.top - 1
        text: 'Давид:' + ' ' + str(root.player1.score)

    Label:
        font_size: 80
        center_x: root.width * 3 / 4
        top: root.top - 1
        text: 'Егор:' + ' ' + str(root.player2.score)

    Label:
        font_size: 30
        center_x: root.width / 1.9
        top: root.top - 530
        text: 'судья: Даник'

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
